<div class="container">
<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.category %></p>

<p><%= @restaurant.address %></p>

<ul>
  <% @restaurant.reviews.each do |review| %>
  <h2><%= review.content %></h2>
  <p><%= review.rating %></p>
  <% end %>
</ul>

<%= link_to "+ add a review", new_review_path(@restaurant)%>

<%= link_to "<back", restaurants_path %>

</div>
